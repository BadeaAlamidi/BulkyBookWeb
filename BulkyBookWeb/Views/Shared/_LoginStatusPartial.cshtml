@if (User.Identity.IsAuthenticated){
	<form method="post" class="form-inline">
		Welcome @User.Identity.Name
		<button asp-controller="Login" asp-action="Logout" class="ml-2 btn btn-link" >
			Logout
		</button>
	</form>
}
else {
	<a class="btn btn-link" asp-controller="Login" asp-action="Index">Login</a>
	<a class="btn btn-link" asp-controller="Login" asp-action="SignUp">Register</a>
}