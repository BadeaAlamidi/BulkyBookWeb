@model Category

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>
		@*<div asp-validation-summary=All></div>*@
		<div class = "mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control">
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
		</div>
		<div class = "mb-3">
			<label asp-for="DisplayOder"></label>
			<input asp-for="DisplayOder" class="form-control">
			<span asp-validation-for="DisplayOder" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:100%"> Create</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
